<% include partials/header %>

  <div class="container">
<div class="jumbotron">  <div class="container">
<h1>Add a New Campground.</h1>
<p>Please enter below the name and URL of the image for your Campground.</p>
<p><a class="btn btn-primary btn-large" href="/campgrounds">Go Back to Campgrounds</a></p>
</div></div>
<div class="row">
  <div style="width: 40%; margin: 0 auto;">
<form method="post" action="/campgrounds">
  <div class="form-group">
    <label for="name">Name of the Campground</label>
    <input type="text" class="form-control" id="name" name="campName" placeholder="Enter Camp Name">
  </div>
  <div class="form-group">
    <label for="name">Price per Night</label>
    <input type="text" class="form-control" id="name" name="campPrice" placeholder="Enter Camp Price">
  </div>
  <div class="form-group">
    <label for="name">Description of the Campground</label>
    <input type="text" class="form-control" id="name" name="campDesc" placeholder="Enter Description">
  </div>

  <div class="form-group">
    <label for="name">URL of the Image of the Campground</label>
    <input type="text" class="form-control" id="name" name="campImage" placeholder="Enter Image's URL">
  </div>

<button class="btn btn-primary">Add Camp</button>
</form>
</div>
</div>
</div>
