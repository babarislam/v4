<% include partials/header %>


<div class="container">
<header class="jumbotron"><div class="container">
<h1>This is the Camp Grounds Page</h1>
<p>View our hand-picked campgrounds form around the world.</p></div>
<p><a class="btn btn-primary btn-large" href="/campgrounds/new">Add a new campground</a></p>
</header>


<div class="row text-center" style="display: flex; flex-wrap: wrap">
  <% camps.forEach( (camp)=> { %>
<div class="col-md-3 col-sm-6">
  <div class="img-thumbnail">
  <img src="<%= camp.image %>" class="img-fluid"><br/>
  <div class="caption"><br/>
<h6>Camp Name: <%= camp.name %></h6>
<p><a href="/campgrounds/<%= camp._id %>" class="btn  btn-outline-primary btn-sm">Learn More</a> </p>
  </div>
</div>
  </div>
<% }); %>

</div>
</div>

<% include partials/footer %>
