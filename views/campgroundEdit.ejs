<% include partials/header %>

  <div class="container">
<div class="jumbotron">  <div class="container">
<h1>Edit Campground.</h1>
<p>Please enter below the name and URL of the image for your Campground.</p>
<p><a class="btn btn-primary btn-large" href="/campgrounds">Go Back to Campgrounds</a></p>
</div></div>
<div class="row">
  <div style="width: 40%; margin: 0 auto;">
<form method="post" action="/campgrounds/<%= camp._id %>?_method=PUT">
  <div class="form-group">
    <label for="name">Name of the Campground</label>
    <input type="text" class="form-control" id="name" name="campName" value="<%= camp.name %>">
  </div>
  <div class="form-group">
    <label for="name">Price of the Campground</label>
    <input type="text" class="form-control" id="name" name="campPrice" value="<%= camp.price %>">
  </div>
  <div class="form-group">
    <label for="name">Description of the Campground</label>
    <input type="text" class="form-control" id="name" name="campDesc" value="<%= camp.description %>">
  </div>

  <div class="form-group">
    <label for="name">URL of the image of the Campground</label>
    <input type="text" class="form-control" id="name" name="campImage" value="<%= camp.image %>">
  </div>

<button class="btn btn-primary">Add Camp</button>
</form>
</div>
</div>
</div>
<% include partials/footer %>
